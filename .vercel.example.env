# MongoDB Database Connection String
DATABASE=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Server Port (optional, Vercel will handle this)
PORT=8000

# JWT Secret Key
JWT_SECRET=your-secret-key-here

# Braintree Configuration (if using payment gateway)
BRAINTREE_MERCHANT_ID=your-merchant-id
BRAINTREE_PUBLIC_KEY=your-public-key
BRAINTREE_PRIVATE_KEY=your-private-key

# Auth API Key (if used)
AUTH_API_KEY=your-auth-api-key

# Node Environment
NODE_ENV=production

